<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Admin Dashboard</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-success">
                    <h5 class="alert-heading">Welcome, <%= user.name %>!</h5>
                    <p class="mb-0">You have full administrative privileges.</p>
                </div>
                
                <div class="row mt-4">
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <h5 class="card-title">Users</h5>
                                <p class="display-4">
                                    <i class="bi bi-people-fill"></i>
                                    <span id="userCount">-</span>
                                </p>
                                <a href="/admin/users" class="btn btn-outline-primary">Manage Users</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <h5 class="card-title">Settings</h5>
                                <p class="display-4">
                                    <i class="bi bi-gear-fill"></i>
                                </p>
                                <a href="/admin/settings" class="btn btn-outline-primary">System Settings</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <h5 class="card-title">Activity</h5>
                                <p class="display-4">
                                    <i class="bi bi-graph-up"></i>
                                </p>
                                <a href="/admin/activity" class="btn btn-outline-primary">View Logs</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Recent Activity</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Action</th>
                                        <th>User</th>
                                        <th>Time</th>
                                    </tr>
                                </thead>
                                <tbody id="recentActivity">
                                    <tr>
                                        <td colspan="4" class="text-center">No recent activity</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
