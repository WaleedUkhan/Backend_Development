<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Error</h4>
            </div>
            <div class="card-body text-center py-5">
                <div class="display-1 text-danger mb-4">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <h2 class="card-title">Oops! Something went wrong</h2>
                <p class="lead"><%= typeof message !== 'undefined' ? message : 'An unexpected error occurred.' %></p>
                <p class="text-muted">Please try again or contact support if the problem persists.</p>
                <div class="mt-4">
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house-door-fill me-2"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
